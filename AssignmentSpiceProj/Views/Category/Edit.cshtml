@model Spice.DomainModel.Category
@{
    ViewBag.Title = "Edit";
}



<br />
<h2 class="text-info">Edit Category</h2>
<br />

<form action="/Category/Edit" method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div class="form-group row">
            @Html.LabelFor(m => m.Name)
            @Html.HiddenFor(m => m.Id)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Employeename" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "field-validation-error text-danger" })
        </div>
        @*<div class="form-group row">
                <div class="col-5 offset-2">
                    <partial name="_EditAndBackToListButton" model="Model.Id" />
                </div>
            </div>*@
    </div>
    <button type="submit" class="btn btn-success">Edit Category</button>
    <a class="btn btn-dark" href="/Category/Index">Cancel</a>

</form>