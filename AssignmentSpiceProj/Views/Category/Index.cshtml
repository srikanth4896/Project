@model IEnumerable<Spice.DomainModel.Category>
@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>
<td>
    @Html.ActionLink("Create Now", "create")

</td>
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Category List</h2>
        </div>
        <div class="col-6 text-right">
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
<table class="table table-striped border">
    <tr class="table-secondary">
        <th>
            @Html.DisplayNameFor(m => m.Name)
        </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(m => item.Name)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id, Controller = "Category" }, new { @class = "btn btn-primary" })
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id, Controller = "Category" }, new { @class = "btn btn-primary" })

    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
    </td>
</tr>}
</table> }
else
{
<p>No category exists...</p>}
    </div>
</div>