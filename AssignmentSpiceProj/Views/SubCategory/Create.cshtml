@model AssignmentSpiceProj.Models.ViewModels.CategoryAndSubCategoryViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create Sub Category</h2>
<br />

<form action="/SubCategory/Create" method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.SubCategory.CategoryId)
            @Html.TextBoxFor(m => m.SubCategory.CategoryId, new { @class = "form-control", placeholder = "Category Id" })
            @Html.ValidationMessageFor(m => m.SubCategory.CategoryId, "", new { @class = "field-validation-error text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.SubCategory.Name)
            @Html.TextBoxFor(m => m.SubCategory.Name, new { @class = "form-control", placeholder = "SubCategory name" })
            @Html.ValidationMessageFor(m => m.SubCategory.Name, "", new { @class = "field-validation-error text-danger" })
        </div>

    </div>
    @Html.ValidationSummary()
    <button type="submit" class="btn btn-success">Add Sub Category</button>
    @Html.ActionLink("Cancel", "Index", "Category", new { @class = "btn btn-dark" })
</form>

